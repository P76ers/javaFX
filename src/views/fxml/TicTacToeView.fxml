<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TicTacToeViewController">
    <children>
        <GridPane layoutX="68.0" layoutY="33.0" prefHeight="500.0" prefWidth="500.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="btn1" mnemonicParsing="false" onAction="#onBtnClick" prefHeight="295.0"
                        prefWidth="191.0"/>
                <Button fx:id="btn2" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onBtnClick"
                        prefHeight="295.0" prefWidth="191.0" GridPane.columnIndex="1"/>
                <Button fx:id="btn3" layoutX="177.0" layoutY="10.0" mnemonicParsing="false" onAction="#onBtnClick"
                        prefHeight="295.0" prefWidth="191.0" GridPane.columnIndex="2"/>
                <Button fx:id="btn4" mnemonicParsing="false" onAction="#onBtnClick" prefHeight="295.0" prefWidth="191.0"
                        GridPane.rowIndex="1"/>
                <Button fx:id="btn5" mnemonicParsing="false" onAction="#onBtnClick" prefHeight="295.0" prefWidth="191.0"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button fx:id="btn6" mnemonicParsing="false" onAction="#onBtnClick" prefHeight="295.0" prefWidth="191.0"
                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Button fx:id="btn7" mnemonicParsing="false" onAction="#onBtnClick" prefHeight="295.0" prefWidth="191.0"
                        GridPane.rowIndex="2"/>
                <Button fx:id="btn8" mnemonicParsing="false" onAction="#onBtnClick" prefHeight="295.0" prefWidth="191.0"
                        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button fx:id="btn9" mnemonicParsing="false" onAction="#onBtnClick" prefHeight="295.0" prefWidth="191.0"
                        GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <Button fx:id="btnNewGame" layoutX="586.0" layoutY="486.0" mnemonicParsing="false" onAction="#onBtnClickNewGame"
                prefHeight="47.0" prefWidth="191.0" text="New Game"/>
        <Label fx:id="lblresult" alignment="CENTER" layoutX="586.0" layoutY="33.0" prefHeight="47.0" prefWidth="191.0"
               textAlignment="CENTER">
            <font>
                <Font size="22.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
